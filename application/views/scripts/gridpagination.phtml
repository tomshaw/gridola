    <li class="next"><a href="<?= $this->url(array('page' => $this->last)); ?>">Last</a></li>
    <?php else: ?>
    <li class="next disabled"><a href="#">Last</a></li>
    <?php endif; ?>
  </ul>
</div>
<?php endif; ?>